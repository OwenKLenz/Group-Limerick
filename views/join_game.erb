<h3>Enter your name and select a game</h3>
<form action="/join" method="post">
  <div>
    <label for="group_name">Available Games:</label>
    <select name="group_name">
      <% active_games.each do |game| %>
        <option value="<%= game %>"><%= game %></option>
      <% end %>
    </select>
  </div>
  <div>
  <label for="player_name">Your name:</label>
    <input type="text" id="player_name" name="player_name" value="<%= params[:player_name] %>"/>
  </div>
  <div>
    <button type="submit">Join</button>
  </div>
</form>
